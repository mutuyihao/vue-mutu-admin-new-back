{
    "apps": [
      {
        "name": "vue-mutu-admin",
        "script": "./dist/main.js",
        "env": {
          "NODE_ENV": "production",
          "PORT": 3001
        },
        "interpreter": "node",
        "instances": 1,
        "autorestart": true,
        "watch": false,
        "max_memory_restart": "1G",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "error_file": "logs/error.log",
        "out_file": "logs/out.log",
        "merge_logs": true
      }
    ]
  }